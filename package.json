{
  "name": "@ansvar/irish-law-mcp",
  "version": "1.0.0",
  "description": "Irish Law MCP â€” English legislation via Model Context Protocol",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ireland-law-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "data/database.db"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit -p tsconfig.check.json",
    "build:db": "node --import tsx scripts/build-db.ts",
    "dev": "node --import tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run --exclude '__tests__/contract/**'",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage --exclude '__tests__/contract/**'",
    "ingest": "node --import tsx scripts/ingest.ts",
    "check-updates": "node --import tsx scripts/check-updates.ts",
    "test:contract": "vitest run __tests__/contract/",
    "drift:detect": "node --import tsx scripts/drift-detect.ts",
    "golden:refresh-hashes": "node --import tsx scripts/refresh-golden-hashes.ts",
    "validate": "npm run typecheck && npm test && npm run test:contract",
    "prepublishOnly": "npm run build",
    "postinstall": "test -d dist || npm run build || true"
  },
  "dependencies": {
    "@ansvar/mcp-sqlite": "^1.0.3",
    "@modelcontextprotocol/sdk": "^1.25.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.29",
    "@vercel/node": "^5.6.3",
    "@vitest/coverage-v8": "^4.0.18",
    "better-sqlite3": "^12.6.2",
    "fast-xml-parser": "^5.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ansvar-Systems/Ireland-law-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/Ansvar-Systems/Ireland-law-mcp/issues"
  },
  "homepage": "https://github.com/Ansvar-Systems/Ireland-law-mcp#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "claude",
    "ie-law",
    "ireland",
    "legal",
    "compliance",
    "eisb",
    "ansvar"
  ],
  "author": "Ansvar Systems AB <hello@ansvar.ai>",
  "license": "Apache-2.0",
  "mcpName": "irish-law-mcp",
  "publishConfig": {
    "access": "public"
  }
}
