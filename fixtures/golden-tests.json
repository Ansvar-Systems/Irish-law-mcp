{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Irish Law MCP",
  "description": "Golden contract tests for the Irish Law MCP",
  "tests": [
    {
      "id": "ie-001",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 from Adaptation of Enactments Act, 1922",
      "tool": "get_provision",
      "input": { "document_id": "act-1922-2", "provision_ref": "s1" },
      "assertions": { "result_not_empty": true, "fields_present": ["results"], "text_not_empty": true }
    },
    {
      "id": "ie-002",
      "category": "article_retrieval",
      "description": "Retrieve Section 1 from Data Protection Act 2018",
      "tool": "get_provision",
      "input": { "document_id": "act-2018-7", "provision_ref": "s1" },
      "assertions": { "result_not_empty": true, "fields_present": ["results"], "text_not_empty": true }
    },
    {
      "id": "ie-003",
      "category": "article_retrieval",
      "description": "Retrieve all provisions from Data Protection Act 2018",
      "tool": "get_provision",
      "input": { "document_id": "act-2018-7" },
      "assertions": { "result_not_empty": true, "min_results": 10 }
    },
    {
      "id": "ie-004",
      "category": "search",
      "description": "Search for 'data protection' returns relevant results",
      "tool": "search_legislation",
      "input": { "query": "data protection" },
      "assertions": { "result_not_empty": true, "min_results": 1, "any_result_contains": ["data protection"] }
    },
    {
      "id": "ie-005",
      "category": "search",
      "description": "Search for 'criminal' returns criminal law results",
      "tool": "search_legislation",
      "input": { "query": "criminal" },
      "assertions": { "result_not_empty": true, "min_results": 1, "any_result_contains": ["criminal"] }
    },
    {
      "id": "ie-006",
      "category": "search",
      "description": "Search for 'employment' returns employment law results",
      "tool": "search_legislation",
      "input": { "query": "employment" },
      "assertions": { "result_not_empty": true, "min_results": 1 }
    },
    {
      "id": "ie-007",
      "category": "citation_roundtrip",
      "description": "Validate an Irish legal citation for Data Protection Act 2018",
      "tool": "validate_citation",
      "input": { "citation": "Data Protection Act 2018, s. 1" },
      "assertions": { "result_not_empty": true }
    },
    {
      "id": "ie-008",
      "category": "citation_roundtrip",
      "description": "Format citation returns standard Irish format",
      "tool": "format_citation",
      "input": { "citation": "Section 1, Data Protection Act 2018", "format": "short" },
      "assertions": { "result_not_empty": true, "text_not_empty": true }
    },
    {
      "id": "ie-009",
      "category": "currency",
      "description": "Check currency status of Data Protection Act 2018",
      "tool": "check_currency",
      "input": { "document_id": "act-2018-7" },
      "assertions": { "result_not_empty": true, "text_contains": ["document_id", "status", "is_current"] }
    },
    {
      "id": "ie-010",
      "category": "eu_cross_reference",
      "description": "Get EU basis for Data Protection Act 2018 (GDPR implementation)",
      "tool": "get_eu_basis",
      "input": { "document_id": "act-2018-7" },
      "assertions": { "result_not_empty": true, "any_result_contains": ["2016/679", "GDPR"] }
    },
    {
      "id": "ie-013",
      "category": "eu_cross_reference",
      "description": "Get Irish implementations for GDPR includes Data Protection Act 2018",
      "tool": "get_irish_implementations",
      "input": { "eu_document_id": "regulation:2016/679", "primary_only": true },
      "assertions": { "result_not_empty": true, "any_result_contains": ["act-2018-7"] }
    },
    {
      "id": "ie-011",
      "category": "negative_test",
      "description": "Non-existent statute returns gracefully",
      "tool": "get_provision",
      "input": { "document_id": "act-9999-9999", "provision_ref": "s1" },
      "assertions": { "handles_gracefully": true }
    },
    {
      "id": "ie-012",
      "category": "negative_test",
      "description": "Search with non-existent term handled gracefully",
      "tool": "search_legislation",
      "input": { "query": "xyznonexistentirish9999" },
      "assertions": { "handles_gracefully": true }
    }
  ]
}
